<main>
  {{#if hero}}
    <div class="auth-form text-center m-auto p-10 sm:max-w-[450px] lg:max-w-[550px] xl:max-w-[650px]">
      <h2 class="text-5xl p-20 text-berani">Edit Heroes</h2>
      <form action="/heroes/edit/{{hero.id}}" method="post">

          <div class="form-group">
              <input class="input-style" type="text" name="name" required placeholder="Name" value="{{hero.name}}">
          </div>

          <div class="form-group">
              <input class="input-style" type="text" name="description" required placeholder="Description" value="{{hero.description}}">
          </div>

          <div class="form-group flex items-center space-x-4 justify-center">
            
            
            <label for="file-input" class="bg-white w-[50%] p-4 mb-2 border border-gray-300 rounded-full text-base text-gray-700 box-border text-start"><span id="file-name" class="text-gray-600">No file chosen</span></label>
            <input class="hidden" id="file-input" type="file" name="image" placeholder="Image" onchange="previewImage()">
            
            <select name="type" id="type" class="bg-white w-[50%] p-4 mb-2 border border-gray-300 rounded-full text-base text-gray-700 box-border">
              {{#each types}}
              <option value="{{this.id}} " class="w-full p-10 mb-10 border border-gray-300 rounded-full text-base text-gray-700 box-border ">{{this.name}}</option>
              {{/each}}
            </select>
          </div>

            <img id="image-preview" src="{{hero.photo}}" class="m-auto p-10 w-48 h-48 object-cover rounded-lg" alt="Image Preview">
          <div class="form-group">
              <button class="button-style" type="submit" >Edit</button>
          </div>
      </form>
      <form action="/heroes/delete/{{hero.id}}" method="post">
          <button class="mt-2 w-full p-2 border-0 rounded-[25px] text-[16px] cursor-pointer text-gray-800 font-medium transition-colors duration-300 box-border bg-red-500" type="submit" id="submit-button">Delete</button>
        </form>
    </div>
  {{else}}
    <div class="bacground-header" >
    <div class="font-medium spacing-wide absolute bg-white rounded-lg shadow-lg w-full max-w-[30%] top-[50%] left-1/2 transform -translate-x-1/2 -translate-y-1/2 p-[50px] px-[40px] text-blue-950 text-center">
        <h2 class="text-4xl">Oops!</h2>
        <h4 class="p-2">Sorry, Theres no hero with that id's! ðŸ˜ž</h4>
        <p>Do you want to create new <a class="text-blue-400" href="/heroes/add">Hero?</a></p>
    </div>
  {{/if}}

  
</main>
<script src="../../../public/js/popup.js"></script>
